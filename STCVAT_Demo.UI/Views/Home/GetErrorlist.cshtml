@model IDictionary<int, (string, string)>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Input VAT Data File Error List</h3>
            </div>
            <div class="box-body" style="overflow-x :auto;max-height:400px">
                <table id="example1" class="table table-bordered table-striped fc-scroller">
                    <thead>
                        <tr>
                            <th>
                                S.No
                            </th>
                            <th>
                                Error Column Name
                            </th>
                            <th>Error Details</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Key</td>
                                <td>@item.Value.Item1 </td>
                                <td>(@item.Value.Item2)</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
           
        </div>
       
    </div>
   
</div>

